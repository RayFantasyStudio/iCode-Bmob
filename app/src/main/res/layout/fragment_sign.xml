<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:id="@+id/usermainLinearLayout1"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="40dp">

		<ImageView
			android:id="@+id/user_image_sign"
			android:layout_width="72dp"
			android:layout_height="72dp"
			android:layout_centerHorizontal="true"/>

		<com.rengwuxian.materialedittext.MaterialEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="请输入邮箱"
			android:textAppearance="@style/Text"
			android:focusableInTouchMode="true"
			app:met_floatingLabelText="邮箱"
			app:met_primaryColor="#0000ff"
			app:met_floatingLabel="highlight"
			android:id="@+id/usermainMaterialEditText_account"/>

		<com.rengwuxian.materialedittext.MaterialEditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="请输入密码"
			android:inputType="textPassword"
			android:focusableInTouchMode="true"
			app:met_floatingLabelText="密码"
			app:met_primaryColor="#0000ff"
			app:met_minCharacters="6"
			app:met_maxCharacters="18"
			app:met_floatingLabel="highlight"
			android:id="@+id/usermainMaterialEditText_password"/>

	</LinearLayout>

	<at.markushi.ui.CircleButton
		android:layout_width="64dp"
		android:layout_height="64dp"
		android:src="@drawable/ic_check_white"
		android:layout_margin="10dp"
		android:id="@+id/sign_up"
		android:layout_below="@id/usermainLinearLayout1"
		app:cb_pressedRingWidth="8dip"
		android:layout_centerHorizontal="true"/>

	<Button
		android:id="@+id/sign_in"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:text="注册"
		android:textColor="@color/PrimaryColor"
		android:background="#00000000"/>

	<Button
		android:id="@+id/sign_pwd"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:layout_alignParentBottom="true"
		android:text="忘记密码"
		android:textColor="@color/PrimaryColor"
		android:background="#00000000"/>

</RelativeLayout>

