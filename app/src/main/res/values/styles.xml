<resources>
	
	
	<style name="AppTheme" parent="AppTheme.Base"/>
		
	<style name="AppTheme.Main" parent="AppTheme"/>
		
	<style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/AppTheme.Base.ToolBar</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
	
	<style name="AppTheme.Base.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Base.ToolBar.TitleTextAppearance</item>
    </style>

    <style name="AppTheme.Base.ToolBar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
	
	<style name="MyToolBarStyle" parent="AppTheme.Base">
		<item name="actionMenuTextColor">@android:color/white</item>
		<item name="android:textColorSecondary">@android:color/primary_text_dark</item>
		<item name="android:textColorPrimary">@android:color/primary_text_light</item>
		<item name="android:textColorTertiary">@android:color/primary_text_light</item>
	</style>

    <style name="Text" parent="@android:style/TextAppearance.StatusBar.Icon">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
